<div id="homepage" class="background-gradient" user-data-set="current_user.id">

  <div class="nav-item dropdown text-right w-100">
    <% if user_signed_in? %>
      <div class="user-menu mt-3" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" ><%= @user.pseudo.chars.first.capitalize %>
      </div>
    <% else %>
      <div id="menu" class="homepage-menu display-none">

        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        <%= link_to "Signup ", new_user_registration_path, class: "nav-link" %>

      </div>
      <!--<i class="fas fa-bars dropdown-toggle mr-3 mt-3 text-white" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" ></i> <!-- petit carré à retirer -->

    <% end %>

    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
      <% if user_signed_in? %>
      <%= link_to "dashboard", user_path(@user), class: "nav-link" %>
      <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %>
      <% end %>
    </div>
  </div>

  <% if user_signed_in? %>
    <div class="content padding-t-10">
  <% else %>
    <div class="content padding-b-15">
  <% end %>

    <div class="image">
      <%= image_tag "image.png", class: "logo-gt" %>
    </div>
    <h1>GUESS WHAT</h1>
    <p>SHARE MUSIC ANYWHERE</p>

  </div>


  <% if user_signed_in? %>
    <div class="text-center padding-b-10">
      <%= simple_form_for @game do |f| %>
        <%= f.submit "Crée une partie", class: "btn-home" %>
      <% end %>
      <%= link_to "REJOINS UNE PARTIE", new_participation_path , class: "btn-home2" %>
    </div>
  <% end %>
</div>




