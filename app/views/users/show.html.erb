<div id="dashboard" class="background-gradient force-height">
  <!-- <div class="navbar"> -->
  <div class="d-flex justify-content-between w-100 pb-5">
    <div>
      <%= link_to root_path do %>
      <%= image_tag "logo-icon.png"%>
      <% end %>
    </div>
    <h2><%= @user.pseudo %></h2>

    <div class="user-icon"><%= @user.pseudo[0].capitalize %>
      <ul id="userMenu" class="user-menu" style="display: none">
        <li><%= link_to "Dashboard", user_path(@user), class: "nav-user-menu narrow" %></li>
        <li><%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-user-menu" %></li>
      </ul>
    </div>
      <!--
      <%#= link_to :back do %>
      <i class="fas fa-arrow-left"></i>
      <%# end %>
      </div>
      -->
  </div>

  <!--<div class="container-showuser">-->
  <div id="highscore" class="scores-card">               <!-- Affiche les 3 meilleurs scores -->
    <h4>Meilleurs scores ever</h4>
    <div id="ranking" class="p-3">
      <% ranking = 1 %>
      <% if Game.count != 0 %>
        <table>
          <tbody>
            <% Game.order(total_score: :desc).first(3).each do |game| %>
              <tr>
                <th><%= ranking %></th>
                <td class='pseudo-ranking'><%= link_to "#{game.user.pseudo}", user_path(game.user) %></td>
                <td class='score-ranking'><%= game.total_score %></td>
                <td class='playlist-ranking'><%= game.playlist.name %></td>
              </tr>
              <% ranking += 1 %>
            <% end %>
            </tbody>
          </table>
      <% else %>
      <p>1</p>
      <p>2</p>
      <p>3</p>
      <% end %>
    </div>
  </div>

  <div class="scores-card">
    <h4>Meilleur temps ever</h4>   <!-- Affiche le meilleur temps -->
    <div id="time-ranking" class="p-3">
      <% if Answer.count != 0 %>
        <dl>
          <dt><%= link_to "#{@faster_answer.user.pseudo}", user_path(@faster_answer.user) %> a trouvé en <b><%= @faster_answer.answering_time %> s</b></dt>
          <dd><em><%= @faster_answer.track.title %></em></dd><dd><strong><%= @faster_answer.track.artist %>.</strong></dd>
        </dl>
        <!--
        <p class="d-flex justify-content-between mx-3">
          <span><%#= link_to "#{@faster_answer.user.pseudo}", user_path(@faster_answer.user) %></span>
          <span><%#= @faster_answer.answering_time %> s</span>
        </p>
        <p class="text-justify px-2"><%#= @faster_answer.track.artist %> / <%#= @faster_answer.track.title %></p>
        -->
      <% else %>
        <p>-</p>
      <% end %>

    </div>
  </div>

    <!-- les trois icones -->
    <div id="statperso">
      <div class="d-flex flex-column justify-content-between resume">
      <!--<h3>Bonnes réponses par playlist</h3>-->

      <div class="d-flex flex-row justify-content-center mb-5">

        <ul class="list-stats">
          <li>
            <i class="fas fa-trophy fa-2x"></i>
          </li>

          <li class="item-stat ">
            <% if @user.games.count != 0 %>
              <h2><%= @user_hight_score %></h2>
            <% else %>
              <h2>-</h2>
            <% end %>
          </li>

          <li class="description">Ton best score</li>
        </ul>

        <ul class="list-stats">
          <li><i class="fas fa-check fa-2x"></i><li>
          <li class="item-stat">
              <% if @user.games.count != 0 %>
                  <h2><%= @percent_user_good_answers %> %</h2>
                <% else %>
                  <h1>-</h1>
              <% end %>
          </li>
          <li class="description">de bonnes réponses</li>

        </ul>

        <ul class="list-stats">
          <li>
            <i class="fas fa-stopwatch fa-2x"></i>
          </li>

          <li class="item-stat">
            <% if @user.games.count != 0 %>
              <h2><%= @user_faster_answer.answering_time %>s</h2>
            <% else %>
              <h2>-</h2>
            <% end %>
          </li>
          <li class="description">best chrono</li>

        </ul>
      </div>

      <%#= @user_faster_answer.track.artist %>
      <%#= @user_faster_answer.track.title %>

      <div class="d-flex justify-content-around my-3">
        <div class="percent-card">
          <h6 class="text-center">FRENCH</h6>
          <p class="text-center"><%= @french_percent %>%</p>
        </div>

        <div class="percent-card">
          <h6 class="text-center">ROCK</h6>
          <p class="text-center"><%= @rock_percent %>%</p>
        </div>

        <div class="percent-card">
          <h6 class="text-center">POP</h6>
          <p class="text-center"><%= @pop_percent %>%</p>
        </div>
      </div>

      <div class="d-flex justify-content-around my-3">
        <div class="percent-card">
          <h6 class="text-center">DANCE</h6>
          <p class="text-center"><%= @dance_percent %>%</p>
        </div>

        <div class="percent-card">
          <h6 class="text-center">R-N-B</h6>
          <p class="text-center"><%= @rnb_percent %>%</p>
        </div>

        <div class="percent-card">
          <h6 class="text-center">ELECTRO</h6>
          <p class="text-center"><%= @electro_percent %>%</p>
        </div>
      </div>
    </div>
  <!--</div>-->
</div>





