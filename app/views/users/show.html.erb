<div id="dashboard" class="background-gradient">
  <!-- <div class="navbar"> -->
  <div class="d-flex justify-content-between w-100 pb-5">
    <div>
      <%= link_to root_path do %>
      <%= image_tag "logo-icon.png"%>
      <% end %>
    </div>
    <h2><%= @user.pseudo %></h2>

    <div class="user-icon"><%= @user.pseudo[0].capitalize %>
      <ul id="userMenu" class="user-menu" style="display: none">
        <li><%= link_to "Dashboard", user_path(@user), class: "nav-user-menu narrow" %></li>
        <li><%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-user-menu" %></li>
      </ul>
    </div>
      <!--
      <%#= link_to :back do %>
      <i class="fas fa-arrow-left"></i>
      <%# end %>
      </div>
      -->
  </div>

  <!--<div class="container-showuser">-->
    <div class="highscore">
      <h3 class="text-center mb-5">Top Scores</h3>
      <div id="ranking" class="mb-3">
      <% ranking = 1 %>
      <% if Game.count != 0 %>
        <% Game.order(total_score: :desc).first(3).each do |game| %>
        <div class="d-flex justify-content-between">
          <h4 class="px-2"><%= ranking %>.</h4>
          <p class ="mx-2 mr-auto"><%= link_to "#{game.user.pseudo}", user_path(game.user) %></p>
          <p class="highscore-playlist"><%= game.playlist.name %></p>
          <p class="highscore-score ml-3"><%= game.total_score %></p>
          <% ranking += 1 %>
        </div>
      <% end %>
      <% else %>
      <p>1</p>
      <p>2</p>
      <p>3</p>
      <% end %>
      </div>

      <h3 class="text-center">Le + rapide</h3>
      <div class="d-flex justify-content-between mx-3">
        <% if Answer.count != 0 %>
        <p><%= link_to "#{@faster_answer.user.pseudo}", user_path(@faster_answer.user) %></p>
        <p class="text-justify px-2"><%= @faster_answer.track.artist %> / <%= @faster_answer.track.title %></p>
        <p><%= @faster_answer.answering_time %>s</p>
        <% else %>
        <p>-</p>
        <% end %>

      </div>
    </div>

    <div class="statperso">
      <!-- <h3>pourcentage de bonnes r√©ponse</h3> -->
      <div class="d-flex flex-column justify-content-between resume">
      <div class="d-flex flex-row justify-content-center mb-5">
        <ul class="list-stats">
          <li><i class="fas fa-trophy fa-2x"></i><li>

          <li><div class="item-stat">
            <% if @user.games.count != 0 %>
            <p><%= @user_hight_score %></p>
            <% else %>
            <p>-</p>
            <% end %>
          </div>
          </li>
        </ul>

        <ul class="list-stats">
          <li><i class="fas fa-check fa-2x"></i><li>

          <li><div class="item-stat">
            <% if @user.games.count != 0 %>
            <p><%= @percent_user_good_answers %></p>
            <% else %>
            <p>-</p>
            <% end %>
          </div>
          </li>
        </ul>

        <ul class="list-stats">
          <li><i class="fas fa-stopwatch fa-2x"></i><li>

          <li><div class="item-stat">
            <% if @user.games.count != 0 %>
            <p><%= @user_faster_answer.answering_time %></p>
            <% else %>
            <p>-</p>
            <% end %>
          </div>
          </li>
        </ul>
      </div>

      <%#= @user_faster_answer.track.artist %>
      <%#= @user_faster_answer.track.title %>

      <div class="d-flex justify-content-around my-3">
        <div class="percent-card">
          <h6 class="text-center">FRENCH</h6>
          <p class="text-center"><%= @french_percent %>%</p>
        </div>

        <div class="percent-card">
          <h6 class="text-center">ROCK</h6>
          <p class="text-center"><%= @rock_percent %>%</p>
        </div>

        <div class="percent-card">
          <h6 class="text-center">POP</h6>
          <p class="text-center"><%= @pop_percent %>%</p>
        </div>
      </div>

      <div class="d-flex justify-content-around my-3">
        <div class="percent-card">
          <h6 class="text-center">DANCE</h6>
          <p class="text-center"><%= @dance_percent %>%</p>
        </div>

        <div class="percent-card">
          <h6 class="text-center">R-N-B</h6>
          <p class="text-center"><%= @rnb_percent %>%</p>
        </div>

        <div class="percent-card">
          <h6 class="text-center">ELECTRO</h6>
          <p class="text-center"><%= @electro_percent %>%</p>
        </div>
      </div>
    </div>
  <!--</div>-->
</div>





